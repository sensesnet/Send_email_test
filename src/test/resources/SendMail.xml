<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="test Suite">
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>

    <!-- SendMailTest -->
    <test name="SendMail">
        <classes>
            <class name="SendEMailTest.SendMailTest"/>
        </classes>
    </test>

    <!-- LoginMail -->
    <test name="AppTest">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="LogInTest.LogInChromeTest"></class>
        </classes>
    </test>

    <!-- LoginMailNegative -->
    <test name="LoginMailNegative">
        <classes>
            <class name="LogInTest.LogInNegativeTest"/>
        </classes>
    </test>
    <!-- CheckInBoxMail -->
    <test name="CheckInBoxMail">
        <classes>
            <class name="CheckInboxTest.CheckInboxTest"/>
        </classes>
    </test>
    <!-- CheckOutBoxMail -->
    <test name="CheckOutBoxMail">
        <classes>
            <class name="CheckOutboxTest.CheckOutboxTest"/>
        </classes>
    </test>

</suite>
